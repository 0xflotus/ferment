Dialog {
  display: flex
  flex-direction: column
  height: 100%

  section {
    flex: 1
    display: flex
  }

  footer {
    min-height: 50px
    padding: 8px
    background: #222
    display: flex
    justify-content: flex-end

    div.info {
      flex: 1
      padding: 8px
      font-size: 13px
    }

    button {
      margin-left: 10px
    }
  }
}
